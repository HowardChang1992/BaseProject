<?xml version="1.0"?>
<template
        format="5"
        revision="6"
        name="Google MVP Activity"
        minApi="9"
        minBuildApi="14"
        requireAppTheme="true"
        description="Creates a Google MVP configuration.">

    <category value="Activity"/>
    <formfactor value="Mobile"/>

    <parameter
            id="pageClass"
            name="Page Name with Uppercase"
            type="string"
            constraints="class|unique|nonempty"
            suggest="${layoutToActivity(layoutName)}"
            default="Main"
            help="The name of the activity class to create"/>
	

    <!-- for PresenterModule -->
	<parameter
            id="lowercasePageName"
            name="Page Name with Lowercase"
            type="string"
            constraints="class|unique|nonempty"
            suggest="${layoutToActivity(layoutName)}"
            default="main"
            help="The name of the activity class to create"/>

    <!-- 128x128 thumbnails relative to template.xml -->
    <thumbs>
        <!-- default thumbnail is required -->
        <thumb>template_basic_activity.png</thumb>
    
    </thumbs>

    <globals file="globals.xml.ftl"/>
    <execute file="recipe.xml.ftl"/>

</template>
